{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es2021",
    "outDir": "build",
    "lib": ["es2021"],
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true
  }
}
