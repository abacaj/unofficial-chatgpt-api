{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es2018",
    "outDir": "build"
  }
}
